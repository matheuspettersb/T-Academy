package exString;

import javax.swing.JOptionPane;

public class Main {
	
	public static void main(String[] args) {
		String frase = JOptionPane.showInputDialog("Informe uma frase ou palavra: ");
		String letra;
//		char[] vetorChar = new char[frase.length()];
		
		for (int i=0; i<frase.length();i++) {
			letra.valueOf(frase.charAt(i));
			if (i%2 == 0) {
				letra.toUpperCase();
			} else {
				letra.toLowerCase();
			}
			
			frase.replace(frase.charAt(i), letra.charAt(0));
		}
	}

}
